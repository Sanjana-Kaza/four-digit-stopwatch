#include <avr/io.h>
//#include <util/delay.h>
//#define TIFR1
int main( void)

{

	DDRC |= 0b00010000;//PC4 output
	DDRD |= 0b00000000;//setting port D as input ie PD3
	PORTD = 0b11111111; // activate pull up resistor
	//TCCR1B |= ( 1<< CS10) | ( 1 << CS12 );    // setting prescalar to 1024
    TCCR1B |= ( 1<< CS11) ;    // setting prescalar to 8
	OCR1A = 25000;   // compares register and timer  value for 100ms
    //TCCR1A |= (1<< COM1A0) | (1<< COM1A1);
	TCNT1 = 0;
	while(1)
	{
	    while( (TIFR1 & (1<<OCF1A)) == 0); // alert when it hits the compare value .
		//if (TCNT1 == 25000)

		{  
			//PORTC |= (1<< PORTC4);
			PORTC ^= (1 << PORTC4);
			TCNT1 = 0; 
		    TIFR1 |= (1<<OCR1A); // clearing the alert
		}
			
	}
}


